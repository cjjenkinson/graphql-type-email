{
  "name": "graphql-type-email",
  "version": "0.1.0",
  "description": "RFC822 spec compliant email address scalar type for GraphQL.js",
  "keywords": [
    "graphql",
    "email",
    "graphql scalar",
    "scalar",
    "email address"
  ],
  "author": "Cameron Jenkinson <camjenkinson@gmail.com>",
  "license": "MIT",
  "repository": "https://github.com/cjjenkinson/graphql-type-email.git",
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "yarn remove:build && babel src --out-dir dist",
    "test": "jest",
    "test:coverage": "yarn test --coverage",
    "test:watch": "yarn test --watch",
    "clean": "yarn remove:build & yarn remove:coverage & yarn remove:modules",
    "remove:build": "rimraf dist",
    "remove:coverage": "rimraf coverage",
    "remove:modules": "rimraf node_modules",
    "lint": "eslint --cache src",
    "lint:fix": "yarn lint --fix"
  },
  "peerDependencies": {
    "graphql": ">=0.8.0"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "eslint": "^4.19.1",
    "eslint-config-airbnb-base": "^13.0.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-import": "^2.12.0",
    "eslint-plugin-prettier": "^2.6.2",
    "graphql": "^0.13.2",
    "husky": "^1.0.0-rc.13",
    "jest": "^23.4.0",
    "lint-staged": "^7.2.0",
    "prettier": "1.13.7",
    "rimraf": "^2.6.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,css,md}": [
      "prettier --write",
      "git add"
    ]
  }
}
